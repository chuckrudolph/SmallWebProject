
@{
    ViewBag.Title = "Index";
}

<h1>The Calculator</h1>

<div class="container">

    <!-- Text box 1 -->
    <div class="tbxContainer">
        <input class="tbx" data-bind="value: firstValue" type="text" />
        <spann class="error" data-bind="validationMessage: firstValue"></spann>
    </div>


    <!-- Dropdown Menu -->
    <div class="tbxContainer">
        <select class="menu" data-bind="options: math, value: symbol"></select>
    </div>

    <!-- Text box 2 -->
    <div class="tbxContainer">
        <input data-bind="value: secondValue" />
        <spann class="error" data-bind="validationMessage: secondValue"></spann>
    </div>

    <span>=</span>

    <!-- Result text box -->
    <div class="tbxContainer">
        <input disabled="disabled" id="result" />
     </div>
 </div>


 @section scripts {
    <script src="~/Scripts/knockout.validation.min.js"></script>
    <script src="~/Scripts/calcultator.js"></script>
}
